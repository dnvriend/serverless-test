{
  "target": "es2015",
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "exclude": [
    ".vscode",
    ".git"
  ],
  "rootDir": "./src"
}